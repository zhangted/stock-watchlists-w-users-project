<%= form_with(model: watchlist, local: true) do |form| %>
  <% if watchlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(watchlist.errors.count, "error") %> prohibited this watchlist from being saved:</h2>

      <ul>
      <% watchlist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :tickers, 'tickers (separate by commas)' %>
    <%= form.text_area :tickers, cols: 50, rows:20 %>
  </div>

  <div class="actions">
    <%= form.hidden_field :user_id, value: session[:user_id]%>
    <%= form.submit class: 'btn' %>
  </div>
<% end %>
